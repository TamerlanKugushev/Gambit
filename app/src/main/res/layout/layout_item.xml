<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo">

    <com.daimajia.swipe.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        swipe:leftEdgeSwipeOffset="0dp"
        swipe:rightEdgeSwipeOffset="0dp">

        <LinearLayout
            android:id="@+id/go"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/recycler_view_item_swipe_left_background"
            android:gravity="center"
            android:tag="Bottom3"
            android:weightSum="10">

            <ImageView
                android:id="@+id/trash"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/ic_unlike" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageFood"
                android:layout_width="148dp"
                android:layout_height="148dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="35dp" />

            <TextView
                android:id="@+id/titleFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="175dp"
                android:layout_marginTop="55dp"
                android:background="#FFFFFF"
                android:fontFamily="@font/roboto_light"
                android:text="@string/app_name"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_price"
                android:layout_width="72dp"
                android:layout_height="36dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/round_for_btn_price"
                android:fontFamily="@font/roboto_light"
                android:text="@string/price"
                android:textColor="#000000"
                android:textStyle="bold"
                swipe:backgroundTint="#DCDCDC" />


            <Button
                android:id="@+id/btnMinus"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_marginStart="245dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/round_for_btn_price"
                android:backgroundTint="@color/color_for_action_bar"
                android:text="-"
                android:textStyle="bold"
                android:visibility="invisible" />


            <TextView
                android:id="@+id/textSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="297dp"
                android:layout_marginTop="120dp"
                android:fontFamily="@font/roboto_light"
                android:text="0"
                android:textColor="@color/black"
                android:visibility="invisible" />


            <Button
                android:id="@+id/btnPlus"
                android:layout_width="40dp"
                android:layout_height="36dp"
                android:layout_marginStart="314dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/round_for_btn_price"
                android:backgroundTint="@color/color_for_action_bar"
                android:text="+"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnBasket"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="245dp"
                android:layout_marginTop="104dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/roboto_light"
                android:text="В корзину"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:visibility="visible" />


        </RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>
</LinearLayout>